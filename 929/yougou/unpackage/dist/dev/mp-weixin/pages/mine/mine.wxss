.row {
  height: 80rpx;
  line-height: 80rpx;
  width: 87%;
  background-color: white;
  margin-left: 50rpx;
  border-bottom: 4rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.content {
  height: 72vh;
  overflow: hidden;
  background-color: #edece8;
}
.content .order-box {
  margin-top: 80rpx;
  width: 87%;
  background-color: white;
  margin-left: 50rpx;
}
.content .order-box .order-title {
  padding: 20rpx;
  border-bottom: 4rpx solid #ddd;
}
.content .order-box .order-list {
  padding: 16rpx 0;
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.content .order-box .order-list .order-item image {
  width: 45rpx;
  height: 45rpx;
}
.top {
  overflow: hidden;
  background-color: #d75255;
  height: 300rpx;
}
.top .login {
  width: 120rpx;
  padding: 20rpx 30rpx;
  color: #b0fd2e;
  border-radius: 5rpx;
  border: solid 2rpx #b0fd2e;
  margin: 50rpx auto;
  text-align: center;
}
.tab {
  display: flex;
  width: 87%;
  position: absolute;
  height: 100rpx;
  top: 250rpx;
  left: 50rpx;
  background-color: white;
  justify-content: space-around;
  text-align: center;
  padding: 10rpx 0;
}
.tab .item view:nth-of-type(1) {
  color: #d75255;
}
/* pages/user/user.wxss */
.box{
  width: 100%;
  height: 199%;
  box-sizing: border-box;
  padding: 20rpx;
}
.box .li{
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.box .li>text{
  color: #3e4c5d;
}
.box .li image{
  width: 70rpx;
  height: 70rpx;
}
.box .li .right{
  color: #3e4c5d;
  font-size: 35rpx;
}
.box .li .right view{
  width: 25rpx;
  height: 25rpx;
  /* display: inline-block; */
  float: right;
  margin-top: 15rpx;
  margin-left: 20rpx;
  border-top: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  transform: rotate(45deg);
}